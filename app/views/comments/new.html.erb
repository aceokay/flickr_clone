<h1>New Comment!</h1>

<%= form_for [@photo, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
